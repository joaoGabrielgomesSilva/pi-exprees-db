<h1>{{title}}</h1>


<form action="/alunos/{{parametro}}" method="POST">
  <input type="hidden" name="_method" value="{{method}}">
  <div class="mb-3">
    <label for="formGroupExampleInput" class="form-label">Nome do Aluno</label>
    <input type="text" name="nome" class="form-control" id="formGroupExampleInput" value="{{aluno.nome}}"
      placeholder="Digite o Nome do Aluno">
  </div>
  <div class="mb-3">
    <label for="formGroupExampleInput2" class="form-label">Matricula do aluno </label>
    <input type="number" name="matricula" class="form-control" id="formGroupExampleInput2" value="{{aluno.matricula}}"
      placeholder="Digite o Numero da Matricula">
  </div>
  <div class="mb-3">
    <label for="formGroupExampleInput2" class="form-label">Data de Nacimento </label>
    <input type="Date" name="data_nascimento" class="form-control" id="formGroupExampleInput2" value="{{aluno.data_nascimento}}"
      placeholder="Digite a data de Nacimento">
  </div>
  <div class="mb-3">
    <label for="formGroupExampleInput2" class="form-label">e-mail aluno</label>
    <input type="email" name="email" class="form-control" id="formGroupExampleInput2" value="{{aluno.email}}"
      placeholder="Digite o Email do Aluno">
  </div>
  <input class="btn btn-outline-primary" type="submit" id="submit" value="{{bottonText}} Adicionar Aluno">
</form>